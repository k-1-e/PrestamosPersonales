<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#398297FF"
    tools:context=".Bienvenida">


    <Button
        android:id="@+id/agregarCliente"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="48dp"
        android:onClick="verClientes"
        android:shadowColor="#EC0C0C"
        android:text="Ver Clientes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/verClientes"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:strokeColor="#E11919" />

    <Button
        android:id="@+id/verClientes"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:onClick="agregarClientes"
        android:shadowColor="#EC0C0C"
        android:text="Crear Clientes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:strokeColor="#E11919" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="60sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="31dp"
        android:backgroundTint="#E4EF665C"
        android:onClick="capital"
        android:text="Simulador de Prestamos"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verClientes" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="430dp"
        android:layout_height="252dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/prestamos" />

    <Button
        android:id="@+id/button2"
        android:layout_width="244dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4CAF50"
        android:text="BIENVENIDOS AL MENU"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="60sp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="48dp"
        android:text="acerca de"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/agregarCliente" />


</androidx.constraintlayout.widget.ConstraintLayout>